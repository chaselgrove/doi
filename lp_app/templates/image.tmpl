{% extends "base.tmpl" %}

{% block title %}Image {{ image.identifier }}{% endblock %}

{% block body %}

<table>

    <tr>
        <td>Identifier</td>
        <td>{{ image.identifier}}</td>
    </tr>

    <tr>
        <td>Title</td>
        <td>{{ image.title }}</td>
    </tr>

    <tr>
        <td>Creators</td>
        <td>
            {% for (name, affiliation) in image.creators %}
                {% if affiliation %}
                    {{ name }} ({{ affiliation }})
                {% else %}
                    {{ name }}
                {% endif %}
                <br/>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Publisher</td>
        <td>{{ image.publisher }}</td>
    </tr>

    <tr>
        <td>Publication year</td>
        <td>{{ image.publicationyear }}</td>
    </tr>

    <tr>
        <td>Resource type</td>
        <td>{{ image.resourcetype }}</td>
        </td>
    </tr>

    <tr>
        <td>Alternate identifiers</td>
        <td>
            <a href="{{ image.alternateidentifier }}">{{ image.alternateidentifier }}</a>
        </td>
    </tr>

    <tr>
        <td>Project</td>
        <td>
            <a href="http://dx.doi.org/{{ image.project.identifier }}">{{ image.project.identifier }}</a>
        </td>
    </tr>

    <tr>
        <td>Collections</td>
        <td>
            to do
        </td>
    </tr>

    <tr>
        <td>Sizes</td>
        <td>
            {% for size in image.sizes %}
                {{ size }}
                <br/>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Format</td>
        <td>
            {{ image.format }}
        </td>
    </tr>

    <tr>
        <td>Version</td>
        <td>{{ image.version }}</td>
    </tr>

    <tr>
        <td>Rights</td>
        <td>
            {% if image.rights %}
                <a href="{{ image.rights[1] }}">{{ image.rights[0] }}</a>
            {% else %}
                 no rights
            {% endif %}
        </td>
    </tr>

</table>

{% endblock %}
