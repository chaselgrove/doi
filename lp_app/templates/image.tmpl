{% extends "base.tmpl" %}

{% block title %}Image {{ entity.identifier }}{% endblock %}

{% block body %}

<table>

    <tr>
        <td>Identifier</td>
        <td>{{ entity.identifier}}</td>
    </tr>

    <tr>
        <td>Title</td>
        <td>{{ entity.title }}</td>
    </tr>

    <tr>
        <td>Creators</td>
        <td>
            {% for (name, affiliation) in entity.creators %}
                {% if affiliation %}
                    {{ name }} ({{ affiliation }})
                {% else %}
                    {{ name }}
                {% endif %}
                <br/>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Publisher</td>
        <td>{{ entity.publisher }}</td>
    </tr>

    <tr>
        <td>Publication year</td>
        <td>{{ entity.publicationyear }}</td>
    </tr>

    <tr>
        <td>Resource type</td>
        <td>{{ entity.resourcetype }}</td>
        </td>
    </tr>

    <tr>
        <td>Alternate identifiers</td>
        <td>
            <a href="{{ entity.alternateidentifier }}">{{ entity.alternateidentifier }}</a>
        </td>
    </tr>

    <tr>
        <td>Project</td>
        <td>
            <a href="http://dx.doi.org/{{ entity.project.identifier }}">{{ entity.project.identifier }}</a>
        </td>
    </tr>

    <tr>
        <td>Collections</td>
        <td>
            to do
        </td>
    </tr>

    <tr>
        <td>Sizes</td>
        <td>
            {% for size in entity.sizes %}
                {{ size }}
                <br/>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Format</td>
        <td>
            {{ entity.format }}
        </td>
    </tr>

    <tr>
        <td>Version</td>
        <td>{{ entity.version }}</td>
    </tr>

    <tr>
        <td>Rights</td>
        <td>
            {% if entity.rights %}
                <a href="{{ entity.rights[1] }}">{{ entity.rights[0] }}</a>
            {% else %}
                 no rights
            {% endif %}
        </td>
    </tr>

</table>

{% endblock %}
