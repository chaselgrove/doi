{% extends "base.tmpl" %}

{% block title %}Image {{ image.identifier }}{% endblock %}

{% block h2 %}{{ image.title }}{% endblock %}

{% block doi %}{{ image.identifier }}{% endblock %}

{% block pub_info %}{{ image.publisher }}, {{ image.publicationyear }}{% endblock %}

{% block body %}

<table>

    <tr>
        <td>Creators</td>
        <td>
            {% for (name, affiliation) in image.creators %}
                {% if affiliation %}
                    {{ name }} ({{ affiliation }})
                {% else %}
                    {{ name }}
                {% endif %}
                <br/>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Project</td>
        <td>
            <a href="http://dx.doi.org/{{ image.project.identifier }}">{{ image.project.identifier }}</a>
        </td>
    </tr>

    <tr>
        <td>Collections</td>
        <td>
            to do
        </td>
    </tr>

    <tr>
        <td>Sizes</td>
        <td>
            {% for size in image.sizes %}
                {{ size }}
                <br/>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Format</td>
        <td>
            {{ image.format }}
        </td>
    </tr>

    <tr>
        <td>Version</td>
        <td>{{ image.version }}</td>
    </tr>

    <tr>
        <td>Rights</td>
        <td>
            {% if image.rights %}
                <a href="{{ image.rights[1] }}">{{ image.rights[0] }}</a>
            {% else %}
                 no rights
            {% endif %}
        </td>
    </tr>

</table>

<p>
<a href="{{ image.link }}">Download</a>
</p>


{% endblock %}
