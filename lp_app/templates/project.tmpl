{% extends "base.tmpl" %}

{% block title %}Project doi:{{ project.identifier }}{% endblock %}

{% block body %}

<table>

    <tr>
        <td>Identifier</td>
        <td>{{ project.identifier}}</td>
    </tr>

    <tr>
        <td>Title</td>
        <td>{{ project.title }}</td>
    </tr>

    <tr>
        <td>Creators</td>
        <td>
            {% for (name, affiliation) in project.creators %}
                {% if affiliation %}
                    {{ name }} ({{ affiliation }})
                {% else %}
                    {{ name }}
                {% endif %}
                <br/>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Publisher</td>
        <td>{{ project.publisher }}</td>
    </tr>

    <tr>
        <td>Publication year</td>
        <td>{{ project.publicationyear }}</td>
    </tr>

    <tr>
        <td>Contributors</td>
        <td>
            {{ project.contributors['ContactPerson'] }}
            {{ project.contributors['Funder'] }}
        </td>
    </tr>

    <tr>
        <td>Dates</td>
        <td>
            to do
        </td>
    </tr>

    <tr>
        <td>Resource type</td>
        <td>{{ project.resourcetype }}</td>
        </td>
    </tr>

    <tr>
        <td>Alternate identifiers</td>
        <td>
            <a href="{{ project.link }}">{{ project.link }}</a>
        </td>
    </tr>

    <tr>
        <td>Related identifiers</td>
        <td>
            {% for (type, identifier) in project.relatedidentifiers['IsDocumentedBy'] %}
                IdDocumentedBy {{ type }} {{ identifier }}
            {% endfor %}
            {% for (type, identifier) in project.relatedidentifiers['HasPart'] %}
                HasPart {{ type }} {{ identifier }}
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Sizes</td>
        <td>
            {% for size in project.sizes %}
                {{ size }}
                <br/>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Formats</td>
        <td>
            {% for format in project.formats %}
                {{ format }}
                <br/>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Version</td>
        <td>{{ project.version }}</td>
    </tr>

    <tr>
        <td>Rights</td>
        <td>
            to do
        </td>
    </tr>

    <tr>
        <td>Descriptions</td>
        <td>
            {% for (type, description) in project.descriptions %}
                {{ description }} ({{ type }})
                <br/>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Geolocations</td>
        <td>
            {% for place in project.geolocations %}
                {{ place }}
                <br/>
            {% endfor %}
        </td>
    </tr>

</table>

{% endblock %}
