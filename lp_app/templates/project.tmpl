{% extends "base.tmpl" %}

{% block title %}Project doi:{{ project.doi.identifier }}{% endblock %}

{% block body %}

<table>

    <tr>
        <td>Identifier</td>
        <td>{{ project.doi.identifier}}</td>
    </tr>

    <tr>
        <td>Title</td>
        <td>{{ project.doi.metadata['title'] }}</td>
    </tr>

    <tr>
        <td>Creators</td>
        <td>
            {% for (name, affiliation) in project.doi.metadata['creators'] %}
                {% if affiliation %}
                    {{ name }} ({{ affiliation }})
                {% else %}
                    {{ name }}
                {% endif %}
                <br/>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Publisher</td>
        <td>{{ project.doi.metadata['publisher'] }}</td>
    </tr>

    <tr>
        <td>Publication year</td>
        <td>{{ project.doi.metadata['publicationyear'] }}</td>
    </tr>

    <tr>
        <td>Subjects</td>
        <td>
            {% for (subject, scheme, uri) in project.doi.metadata['subjects'] %}
                {% if not scheme %}
                    {{ subject }}
                {% elif not uri %}
                    {% if scheme == 'MeSH' %}
                        MeSH {{ subject }}
                    {% else %}
                        {{ subject }} ({{ scheme }})
                    {% endif %}
                {% else %}
                    {% if scheme == 'MeSH' %}
                        <a href="{{ uri }}">MeSH</a> {{ subject }}
                    {% else %}
                        {{ subject }} (<a href="{{ uri }}">{{ scheme }}</a>)
                    {% endif %}
                {% endif %}
                <br/>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Contributors</td>
        <td>
            {% for (type, name, affiliation) in project.doi.metadata['contributors'] %}
                {% if affiliation %}
                    {{ type }}: {{ name }} ({{ affiliation }})
                {% else %}
                    {{ type }}: {{ name }}
                {% endif %}
                <br/>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Dates</td>
        <td>
            {% for (type, date) in project.doi.metadata['dates'] %}
                {{ dates }} ({{ type }})
                <br/>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Resource type</td>
        <td>{{ project.doi.metadata['resourcetype'] }}</td>
        </td>
    </tr>

    <tr>
        <td>Alternate identifiers</td>
        <td>
            {% for (type, identifier) in project.doi.metadata['alternateidentifiers'] %}
                {% if type == 'URL' %}
                    <a href="{{ identifier }}">{{ identifier }}</a>
                {% else %}
                    {{ identifier }} ({{ type }})
                {% endif %}
                <br/>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Related identifiers</td>
        <td>
            {% for (identifier, type, relation) in project.doi.metadata['relatedidentifiers'] %}
                {% if type == 'PMID' %}
                    {{ relation }} <a href="http://pubmed.org/{{ identifier }}">{{ type }} {{ identifier }}</a>
                {% elif type == 'DOI' %}
                    {{ relation }} <a href="http://dx.doi.org/{{ identifier }}">{{ type }} {{ identifier }}</a>
                {% else %}
                    {{ relation }} {{ type }} {{ identifier }}
                {% endif %}
                <br/>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Sizes</td>
        <td>
            {% for size in project.doi.metadata['sizes'] %}
                {{ size }}
                <br/>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Formats</td>
        <td>
            {% for format in project.doi.metadata['formats'] %}
                {{ format }}
                <br/>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Version</td>
        <td>{{ project.doi.metadata['version'] }}</td>
    </tr>

    <tr>
        <td>Rights</td>
        <td>
            {% for (rights, uri) in project.doi.metadata['rights'] %}
                {% if uri %}
                    <a href="{{ uri }}">{{ rights }}</a>
                {% else %}
                    {{ rights }}
                {% endif %}
                <br/>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Descriptions</td>
        <td>
            {% for (type, description) in project.doi.metadata['descriptions'] %}
                {{ description }} ({{ type }})
                <br/>
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td>Geolocations</td>
        <td>
            {% for place in project.doi.metadata['geolocations'] %}
                {{ place }}
                <br/>
            {% endfor %}
        </td>
    </tr>

</table>

{% endblock %}
